{
  "include": ["./src"],
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",

    "rootDir": "./src",
    "sourceMap": true,
    "outDir": "./build",

    "strict": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "skipLibCheck": true
  }
}